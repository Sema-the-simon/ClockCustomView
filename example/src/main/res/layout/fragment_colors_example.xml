<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/colors_name">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ColorsExampleFragment">

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            app:constraint_referenced_ids="clockView1, clockView2, clockView3, clockView4, clockView5, clockView6"
            app:flow_horizontalGap="10dp"
            app:flow_verticalGap="15dp"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.clockview.ClockView
            android:id="@+id/clockView1"
            android:layout_width="170dp"
            android:layout_height="170dp" />

        <com.example.clockview.ClockView
            android:id="@+id/clockView2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:backColor="@color/black"
            app:borderColor="@android:color/holo_red_dark"
            app:dialColor="@color/white"
            app:dotsColor="@color/white"
            app:hourHandColor="@android:color/holo_blue_bright"
            app:minuteHandColor="@android:color/holo_green_light"
            app:secondHandColor="@android:color/holo_red_light" />

        <com.example.clockview.ClockView
            android:id="@+id/clockView3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:backColor="@color/purple"
            app:borderColor="@color/green"
            app:dotsColor="@color/red"
            app:hourHandColor="@color/white"
            app:minuteHandColor="@color/yellow"
            app:secondHandColor="@color/black" />

        <com.example.clockview.ClockView
            android:id="@+id/clockView4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:backColor="@color/black"
            app:borderColor="@color/red"
            app:dialColor="@color/white"
            app:dotsColor="@color/white"
            app:hourHandColor="@color/white"
            app:minuteHandColor="@color/white"
            app:secondHandColor="@color/white" />

        <com.example.clockview.ClockView
            android:id="@+id/clockView5"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:backColor="@color/light_blue"
            app:borderColor="@color/blue"
            app:hourHandColor="@color/yellow"
            app:minuteHandColor="@color/purple"
            app:secondHandColor="@color/red"/>

        <com.example.clockview.ClockView
            android:id="@+id/clockView6"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:backColor="@color/green"
            app:borderColor="@color/yellow"
            app:dialColor="@color/red"
            app:dotsColor="@color/blue"
            app:hourHandColor="@color/white"
            app:minuteHandColor="@color/red"
            app:secondHandColor="@color/purple" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>